{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",      
      "Acropolis": "Debug"
    }
  },
  "AllowedHosts": "*",
  "FileStorageOptions": {
    "BaseDirectory": "data/downloads"
  },
  "YoutubeOptions": {
    "ValidUrls": [
      "https://www.youtube.com",
      "https://youtube.com",
      "https://youtu.be"
    ]
  },
  "ConnectionStrings": {
    "Database": "Data Source=data/Acropolis.db;cache=shared",
    "scraper": "Data Source=data/Scraper.db;cache=shared"
  },
  "RabbitMq": {
    "Host": "rabbitmq",
    "VirtualHost": "/"
  },
  "ScrapeOptions": {
    "IgnoredDomains": [
      "www.youtube.com",
      "youtube.com",
      "youtu.be"
    ]
  },
  "Telegram": {
    "Enabled": false
  }
}
