{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",      
      "Acropolis": "Debug"
    }
  },
  "AllowedHosts": "*",
  "FileStorageOptions": {
    "BaseDirectory": "data/downloads"
  },
  "YoutubeOptions": {
    "ValidUrls": [
      "https://www.youtube.com",
      "https://youtube.com",
      "https://youtu.be"
    ]
  },
  "ScrapeSettings": {
    "ScraperEndpoint": "http://localhost:8001/",
    "ResourceTypes": [
      "png"
    ],
    "IgnoredHosts": [
      "www.youtube.com",
      "youtube.com",
      "youtu.be"
    ]
  },
  "Telegram": {
    "Enabled": false
  }
}
